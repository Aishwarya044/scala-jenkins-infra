#!/bin/sh

#
# This file was generated by Chef for <%= node['fqdn'] %>.
# Do NOT modify this file by hand.
#


exec 2>&1
cd /home/scabot
touch scabot.start

source /usr/local/share/jvm/jvm-select
jvmSelect openjdk 8

exec chpst -u scabot -U scabot \
  env HOME=/home/scabot \
  java -Dhttp.port=<%=node['scabot']['port']%> -Dlogger.resource=prod-logger.xml -Dconfig.file=/home/scabot/production.conf -Dscabot.config.file=/home/scabot/scabot.conf -Dpidfile.path=/dev/null -jar /home/scabot/scabot/gui/target/scala-2.11/scabot.jar
